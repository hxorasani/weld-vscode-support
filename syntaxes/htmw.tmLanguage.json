{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Weld HTM",
	"scopeName": "source.htmw",
	"patterns": [
		{ "include": "#comments" },
		{ "include": "#selectors" },
		{ "include": "#properties" },
		{ "include": "#variables" }
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"match": "//.*$",
					"name": "comment.line.double-slash.htmw"
				}
			]
		},
		"selectors": {
			"patterns": [
				{
					"match": "#[A-Za-z0-9_-]+",
					"name": "entity.other.attribute-name.id.css"
				},
				{
					"match": "\\.[A-Za-z0-9_-]+",
					"name": "entity.other.attribute-name.class.css"
				},
				{
					"match": ":[A-Za-z0-9_-]+",
					"name": "entity.other.pseudo-class.css"
				},
				{
					"match": "[>+~]",
					"name": "keyword.operator.combinator.css"
				},
				{
					"match": "\\[[a-zA-Z0-9_-]+",
					"name": "entity.other.attribute-name.css"
				},
				{
					"match": "\\\".*?\\\"",
					"name": "string.quoted.double.css"
				}
			]
		},
		"properties": {
			"patterns": [
				{
					"match": "^[ \\t]+([-_a-zA-Z][-_a-zA-Z0-9]*)[ \\t]+",
					"captures": {
						"1": { "name": "support.type.property-name.htmw" }
					}
				},
				{
					"match": "([+-]?(?:\\d*\\.\\d+|\\d+))(deg|rad|grad|turn|px|em|rem|%|vh|vw|vmin|vmax|pt|cm|mm|ch|ex)?\\b",
					"captures": {
						"1": { "name": "constant.numeric.htmw" },
						"2": { "name": "keyword.unit.htmw" }
					}
				},
				{
					"match": "#[0-9A-Fa-f]{3,8}",
					"name": "constant.other.color.hex.htmw"
				},
				{
					"match": "\"[^\"]*\"|'[^']*'",
					"name": "string.quoted.htmw"
				},
				{
					"match": "@[A-Za-z0-9_-]+",
					"name": "variable.other.htmw"
				},
				{
					"match": "\\b(auto|none|inherit|initial|unset)\\b",
					"name": "keyword.other.htmw"
				},
				{
					"match": "\\b([a-zA-Z-]+)\\s*\\(",
					"captures": {
						"1": { "name": "support.function.htmw" }
					}
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"match": "@[a-zA-Z0-9_-]+",
					"name": "variable.other.htmw"
				}
			]
		}
	}
}
